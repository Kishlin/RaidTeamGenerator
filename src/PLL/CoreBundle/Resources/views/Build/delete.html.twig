{% extends 'PLLCoreBundle:Guild:build.html.twig' %}

{% block buildbody %}

<p>{{ 'build.delete.alert'|trans }}</p>
<p>{{ build.name }}</p>

<div class="build-image w3-margin-bottom" data-toggle="build-tooltip" title="{{ build.name }}">
	<img id="build_img" src="/bundles/pllcore/images/build_img/{{ build.img }}.png" class="main">
	<img id="build_imgsub" src="/bundles/pllcore/images/build_imgsub/{{ build.imgsub }}.png" class="sub">
</div>


{% if form is defined %}
<form action="{{ path('pll_core_builds_delete', {'_locale': app.request.locale, 'id': build.id}) }}" method="post">
{% else %}
	<p>{{ 'build.delete.error.used`'|trans }}</p>	
{% endif %}
	<a href="{{ path('pll_core_builds', {'_locale': app.request.locale}) }}" class="btn btn-default">
	  <i class="glyphicon glyphicon-chevron-left"></i>
	  {{ 'build.button.delete.cancel'|trans }}
	</a>
{% if form is defined %}
    <input type="submit" value="{{ 'build.button.delete.confirm'|trans }}" class="btn btn-danger" />
	    
    {{ form_rest(form) }}
</form>
{% endif %}


{% endblock %}