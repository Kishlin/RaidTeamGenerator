{% extends 'PLLCoreBundle:Guild:event.html.twig' %}

{% block eventbody %}

<p>{{ 'event.delete.alert'|trans }}</p>
<p>{{ event.name }}</p>


<form action="{{ path('pll_core_events_delete', {'_locale': app.request.locale, 'id': event.id}) }}" method="post">
    <a href="{{ path('pll_core_events', {'_locale': app.request.locale}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      {{ 'event.button.delete.cancel'|trans }}
    </a>

    <input type="submit" value="{{ 'event.button.delete.confirm'|trans }}" class="btn btn-danger" />
    
    {{ form_rest(form) }}
</form>

{% endblock %}