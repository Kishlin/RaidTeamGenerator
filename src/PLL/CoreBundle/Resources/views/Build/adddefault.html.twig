{% extends 'PLLCoreBundle:Guild:build.html.twig' %}

{% block buildbody %}

<p>{{ 'build.adddefault.alert'|trans }}</p>

<ul class="w3-ul w3-card-4 w3-section">
{% for build in builds %}
  <li class="w3-padding-8">
  	<div style="display: inline-block">
	  	<div class="build-image" data-toggle="build-tooltip" title="{{ build.name }}">
		  <img id="build_img" src="/bundles/pllcore/images/build_img/{{ build.img }}.png" class="main">
		  <img id="build_imgsub" src="/bundles/pllcore/images/build_imgsub/{{ build.imgsub }}.png" class="sub">
		</div>
	</div>
	<span style="margin-left: 10px;">{{ build.name }}</span>
  </li>
{% endfor %}
</ul>

<form action="{{ path('pll_core_builds_add_default') }}" method="post">
    <a href="{{ path('pll_core_builds') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      {{ 'build.button.adddefault.cancel'|trans }}
    </a>

    <input type="submit" value="{{ 'build.button.adddefault.confirm'|trans }}" class="btn btn-warning" />
    
    {{ form_rest(form) }}
</form>

{% endblock %}